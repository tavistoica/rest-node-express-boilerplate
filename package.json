{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build:clean": "rimraf ./{build}",
    "build:server": "webpack --config ./webpack/server.js",
    "build": "npm run build:clean && npm run build:server",
    "dev": "npm run build && node build/server.js",
    "start": "node build/server.js",
    "test": "jest --coverage",
    "lint": "eslint src --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-openapi-validator": "^4.13.5",
    "lint-staged": "^12.3.5",
    "mongodb": "^4.4.0",
    "mongoose": "^6.2.4",
    "swagger-ui-express": "^4.3.0",
    "yaml": "^1.10.2",
    "yaml-loader": "^0.6.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.2",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0",
    "yaml-jest": "^1.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "yml",
      "yaml"
    ],
    "transform": {
      "\\.ya?ml$": "yaml-jest",
      "\\.jsx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "!(*test).{js, jsx}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
